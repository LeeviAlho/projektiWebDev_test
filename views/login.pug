extends layout

block content
  div(class="col s11 m6", id="title") #{title}
  div(class="col s11 m6", id="subtitle") #{subtitle}


  div(id="pagetitle") Login
  form(method='POST' action='/login')
            div.form-group
              label(for='username') Username:
              input#name.form-control(type='text', placeholder='Your username' name='author', class="card-panel teal lighten-1")
            button.btn.btn-primary(type='submit') Open